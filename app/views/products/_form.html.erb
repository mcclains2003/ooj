<%= form_for(@product) do |f| %>
  <p>
    <%= f.label :name %><br/ >
    <%= f.text_field :name, autofocus: true %>
  </p>

  <p>
    <%= f.label :description %><br/ >
    <%= f.text_area :description, cols: 40, rows: 5 %>
  </p>

  <p>
    <%= f.label :image_file_name %><br/ >
    <%= f.text_field :image_file_name %>
  </p>

  <p>
    <%= f.submit %> |  
    <%= link_to('Cancel', products_path) %>
  </p>

  <% end %>